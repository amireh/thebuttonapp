<% content_for :title do %> Sign in | <%= AppName %> <% end %>

<h2>Sign in</h2>
<br />
<form action="/sessions" method="POST">
  <input placeholder="your@email.com" type="text" name="email" />
  <input class="very_fat" type="password" name="password" placeholder="your_password" />

  <!-- <br /> -->
  <input type="submit" class="inline" value="Login" />
</form>

<h2 class="title">Or, 3rd party sign-in</h2>
<br />
<%= partial "static/oauth_signin" %>
