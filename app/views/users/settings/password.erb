<% if current_user.auto_password %>
  <p class="warning">
    A temporary password has been generated and sent to your email address
    <%= current_user.email %>. Please check that message and update your password
    before proceeding. <em class="small hint">You might have to check your Spam folder if your inbox doesn't receive
      the message in the following minute.</em>

    <a href="/notcies/password/new?redispatch=true">Re-send temporary password.</a>
  </p>
<% else %>
  <%= partial "/users/settings/_nav" %>
<% end %>

<form method="POST" action="/settings/password" class="form col-md-4">
  <fieldset>
    <legend>Password</legend>

      <label>Current password
        <input autofocus type="password" class="form-control" name="password[current]" />
      </label>

      <label>
        New password
        <input type="password" class="form-control" name="password[new]" style="margin-bottom: 5px;" />
      </label>

      <label>
        Confirm password
        <input type="password" class="form-control" name="password[confirmation]" />
      </label>

    </ol>
  </fieldset>

  <input type="submit" value="Update Password" class="btn btn-primary" />
</form>